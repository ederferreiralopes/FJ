<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FinderJobs</title>
    <script src="~/jquery/jquery-3.1.0.min.js"></script>
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/dataTables/jquery.dataTables.js"></script>
    <link href="~/dataTables/jquery.dataTables.css" rel="stylesheet" />
    <script src="~/content/js/ScriptIndex.js"></script>
    <style>
        .titulo {
            color: white;
        }

        .glyphicon {
            font-size: 24px;
        }
    </style>
</head>
<body class="jumbotron">
    <div class="row">
        <div class="col-sm-10" style="padding: 10px;">
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar" href="javascript: abrirModalEmpresa();">Editar Cadastro</span>
                            <span class="icon-bar" href="javascript: abrirModalVaga();">Incluir Vaga</span>
                            <span class="icon-bar" href="/Acesso/Index">Sair</span>
                        </button>


                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav"></ul>
                    </div>
                    @ViewBag.Title
                </div>
            </div>

            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; 2014 - @DateTime.Now.Year - FinderJobs 0.1</p>
                </footer>
            </div>
        </div>
    </div>
</body>
</html>