<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FinderJobs</title>
    <script src="~/jquery/jquery-3.1.0.min.js"></script>
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/dataTables/jquery.dataTables.js"></script>
    <link href="~/dataTables/jquery.dataTables.css" rel="stylesheet" />
    <script src="~/content/js/ScriptIndex.js"></script>
    <style>
        .titulo {
            color: white;
        }

        .glyphicon {
            font-size: 24px;
        }
    </style>
</head>
<body class="jumbotron">
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <br />
                    <p class="btn-group">
                        <button id="editarCadastro" class="btn btn-primary" type="button">Editar Cadastro</button>
                        @if (ViewBag.TipoUsuario == "Empresa")
                        { 
                            <button id="incluirVaga" class="btn btn-primary" type="button" >Incluir Vaga</button>
                        }
                    </p>
                    <p class="btn-group">
                        <a href="/Acesso/Index" class="btn btn-primary">Sair</a>
                    </p>
                </div>
            </div>
        </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2014 - @DateTime.Now.Year - FinderJobs 0.1</p>
            </footer>
        </div>
</body>
</html>